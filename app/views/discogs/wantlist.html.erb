<!-- List findings  -->

<!-- Wantlist digdog -->

<% @wants.each do |want| %>
  <div class="wanted">
    <p><%= want.record.artists[0]["name"] %> - <%= want.record.title %></p>
      <% unless want.record.images.nil? %>
        <% want.record.images.each do |image| %>
          <%= image_tag image["uri"] %>
        <% end %>
      <% end %>
    </div>
<% end %>

<!-- Wnatlist discogs  -->

<% @records.each do |record| %>
  <%= simple_form_for([record, Want.new]) do |f| %>
    <div class="record wanted found">
      <p><%= record.artists[0]["name"] %> — <%= record.title %></p>
      <% unless record.images.nil? %>
        <% record.images.each do |image| %>
          <%= image_tag image["uri"] %>
        <% end %>
      <% end %>
    </div>
    <%= f.input :record_id, as: :hidden, input_html: { value: record.id } %>
    <%= f.submit "Créer want" %>
  <% end %>
<% end %>


