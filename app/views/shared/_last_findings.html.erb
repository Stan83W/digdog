<% if findings.any? %>
  <div class="slider">
    <% findings.each do |finding| %>
      <% record = finding.record %>
      <% unless record.images.nil? %>
        <% record.images.each do |image| %>
          <div class="slide" data-title="<%= finding.record.title %>" data-provider="Found on <%= finding.provider %> 1 day ago">
            <%= image_tag image["uri"] %>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <div class="current-infos">
      <h1 class="current-title"></h1>
      <div class="current-provider"></div>
    </div>
  </div>
<% end %>
