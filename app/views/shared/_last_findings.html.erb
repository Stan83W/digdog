<% if findings.any? %>
  <div class="slider">
    <% findings.shuffle.each do |finding| %>
      <% record = finding.record %>
      <% unless record.images.nil? %>
        <% record.images.each do |image| %>
          <div class="slide" data-title="<%= finding.record.title %>" data-provider="Found on <%= finding.provider %> at $<%= rand(1..40) %><br><%= rand(1..6) %> day ago">
            <%= image_tag image["uri"] %>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <div class="slider-right">
    <div class="banner-text title c10">
    Track down<br>rare records<br>24/7
    </div>
      <div class="current-infos">
        <h2 class="current-provider">Found on <%= findings.first.provider %> at $<%= rand(1..40) %><br>1 day ago</h2>
        <p class="current-title ttu lh1"><%= findings.first.record.title %></p>
      </div>
    </div>
  </div>
<% end %>
