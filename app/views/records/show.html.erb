<div class="record-content">
	<h2><%= @record.title %></h2>
	<% @record.artists.each do |artist| %>
		<h3><%= artist["name"] %></h3>
	<% end %>
	<% @record.labels.each do |label| %>
		<h3><%= label["name"] %></h3>
	<% end %>
	<h3><%= @record.year %></h3>
	<% @record.genres.each do |genre| %>
		<h3><%= genre %></h3>
	<% end %>
	<% @record.styles.each do |style| %>
		<h3><%= style %></h3>
	<% end %>
	<%= image_tag @record.images.first["uri"] %>
	
</div>